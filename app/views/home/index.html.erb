<section class="my-blog bg-gradient">
  <div class="container">
    <!-- section title -->
    <div class="row justify-content-md-center">
      <div class="col-xl-5 col-lg-6 col-md-8">
        <div class="section-title text-center title-ex1 heading-info">
          <h2>User Budget Categories</h2>
          <p>Click the Category to View Associated Transactions</p>
        </div>
      </div>
    </div>
    <!-- section title ends -->
    <div class="row">
      <% @user.group_transactions.each do |transact, index| %>
        <%= render partial: 'category', locals: { transact: transact, index: index } %>
      <% end %>
    </div>
	<div class="text-center mt-3">
    <%= link_to 'Add A New Category', new_group_transaction_path, class: "btn btn-primary" %>
  </div>
  </div>
</section>
